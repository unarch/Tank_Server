{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/usr/local/share/dotnet/dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/echo/echo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "/usr/local/share/dotnet/dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/echo/echo.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "/usr/local/share/dotnet/dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/echo/echo.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}